<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> No se pudo guardar este articulo:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Título", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "Descripción", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :when_went, "Fecha / Hora", style: "display: block" %>
    <%= form.datetime_field :when_went %>
  </div>

  <div>
    <%= form.label :country_id, "País", style: "display: block" %>
    <%= form.text_field :country_id %>
  </div>

  <div>
    <br>
    <%= form.submit "Actualizar" %>
  </div>
<% end %>
